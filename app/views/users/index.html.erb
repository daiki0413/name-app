<h1>Users List</h1>

<%=form_tag("/create") do%>
  <div class="form-group">
    <%=label_tag "form-name","Name"%>  
    <%=text_field :user,:name ,class:"form-control" ,id:"form-name"%>
  </div>
  <div class="form-group">
    <%=label_tag "form-age","Age"%>  
    <%=text_field :user,:age ,class:"form-control" ,id:"form-age"%>
  </div>
  <div class="form-group">
    <%=label_tag "form-mail","Mail"%>  
    <%=text_field :user,:mail ,class:"form-control" ,id:"form-mail"%>
  </div>  
    <%=submit_tag "Submit" ,class:"btn btn-primary"%>
<%end%>

<h1>Registrat</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col">Mail</th>
    </tr>
  </thead>
  <tbody>
    <%@users.each do |user|%>
        <tr>
          <th scope="row"><%=user.id%></th>
          <td><%=user.name%></td>
          <td><%=user.age%></td>
          <td><%=user.mail%></td>
        </tr>
    <%end%>
  </tbody>
</table>

